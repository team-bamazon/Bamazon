<%= render partial: 'layouts/header' %>
  <div class="a-container">
    <div class="a-section auth-pagelet-desktop-wide-container">
      <div class="a-section auth-pagelet-container">
        <ol id="breadcrumb_CNEP" class="a-ordered-list a-horizontal">
          <li>
            <span class="a-list-item">
              <%= link_to "アカウントサービス", users_path(current_user),  class: "a-link-normal" %>
            </span>
          </li>
          <li>
            <span class="a-list-item"> > </span>
          </li>
          <li>
            <span class="a-list-item a-color-state">
              <%= link_to "サインインとセキュリティ", user_info_user_path(current_user), class: "a-link-normal" %>
            </span>
          </li>
          <li>
            <span class="a-list-item"> > </span>
          </li>
          <li>
            <span class="a-list-item a-color-state">パスワードの変更</span>
          </li>
        </ol>
        <h1 id="ap_cnep_header" class="a-spacing-small">パスワードの変更</h1>
        <div class="a-box">
          <div class="a-box-inner">
            <div class="a-section">
              <div class="a-row a-spacing-base">Amazonのアカウントのパスワードを変更するには、下のフォームを使用してください。</div>
              <%= form_for current_user do |f| %>
                <div class="a-section a-spacing-large">
                  <div class="a-row">
                    <label for="ap_password" class="a-form-label">現在のパスワード:</label>
                  </div>
                  <div class="a-row">
                    <%= f.password_field :password, id: "ap_password_new", class: "a-input-text" %>
                  </div>
                </div>
                <div class="a-section a-spacing-large">
                  <div class="a-row">
                    <label for="ap_password_new" class="a-form-label">新しいパスワード</label>
                  </div>
                  <div class="a-row">
                    <%= f.password_field :password, id: "ap_password_new", class: "a-input-text" %>
                  </div>
                </div>
                <div class="a-section a-spacing-large">
                  <div class="a-row">
                    <label for="ap_password_new_check" class="a-form-label">新しいパスワードの再入力</label>
                  </div>
                  <div class="a-row">
                    <%= f.password_field :password_confirmation, id: "ap_password_new", class: "a-input-text" %>
                  </div>
                </div>
                <div class="a-fixed-right-grid">
                  <div class="a-fixed-right-grid-inner" style="padding-right:0px">
                    <div class="a-fixed-right-grid-col" style="float:left;">
                    </div>
                  </div>
                </div>
                <div class="a-section a-spacing-large">
                  <span class="a-button a-button-primary" id="a-autoid-0">
                    <span class="a-button-inner">
                      <%= f.submit id: "cnep_1D_submit_button", class: "a-button-input" %>
                      <span class="a-button-text" aria-hidden="true" id="a-autoid-0-announce">変更内容を保存</span>
                    </span>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%= render partial: 'layouts/footer' %>
